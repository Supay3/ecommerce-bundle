{# EntityType #}
{% block entity_row %}
    <div class="admin-form-group select-field">
        <label for="{{ form.vars.id }}" class="admin-form-label label-top {{ form.vars.required ? 'required' }}">
            {% if form.vars.label is not null %}
                {{ form.vars.label }}
            {% else %}
                {{ form.vars.name | u.snake.replace('_', ' ') | title }}
            {% endif %}
        </label>
        <select id="{{ form.vars.id }}"
                name="{{ form.vars.full_name }}"
                {{ form.vars.required ? 'required="required"' }}
                {{ form.vars.multiple ? 'multiple="multiple"' }}
                {% if form.vars.attr is not empty and form.vars.attr.hidden is defined %}
                    {{ form.vars.attr.hidden ? 'hidden="hidden"' }}
                {% endif %}>
            {% for choice in form.vars.choices %}
                <option value="{{ choice.value }}"
                        {% if choice is selectedchoice(form.vars.value) %}
                            selected="selected"
                        {% endif %}>
                    {{ choice.data.name }}
                </option>
            {% endfor %}
        </select>
    </div>
{% endblock %}

{% block entity_label %}
    <label for="{{ form.vars.id }}" class="admin-form-label label-top {{ form.vars.required ? 'required' }}">
        {% if form.vars.label is not null %}
            {{ form.vars.label }}
        {% else %}
            {{ form.vars.name | u.snake.replace('_', ' ') | title }}
        {% endif %}
    </label>
{% endblock %}

{% block entity_widget %}
    <select id="{{ form.vars.id }}"
            name="{{ form.vars.full_name }}"
            {{ form.vars.required ? 'required="required"' }}
            {{ form.vars.multiple ? 'multiple="multiple"' }}
            {% if form.vars.attr is not empty and form.vars.attr.hidden is defined %}
                {{ form.vars.attr.hidden ? 'hidden="hidden"' }}
            {% endif %}>
        {% for choice in form.vars.choices %}
            <option value="{{ choice.value }}"
                    {% if choice is selectedchoice(form.vars.value) %}
                        selected="selected"
                    {% endif %}>
                {{ choice.data.name }}
            </option>
        {% endfor %}
    </select>
{% endblock %}

