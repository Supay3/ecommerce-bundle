{# ProductAttributeValue #}
{% block _product_productAttribute_row %}
    <div class="admin-form-group admin-select-attribute-field">
        {{ form_label(form) }}
        <div class="admin-select-attribute">
            {{ form_widget(form) }}
            <button type="button"
                    class="add-attribute-link"
                    data-collection-holder-class=".productAttributeValues">
