{# EntityType #}
{% block entity_row %}
    <div class="admin-form-group admin-select-field">
        <label for="{{ form.vars.id }}"
               class="admin-form-label admin-label-top {{ form.vars.required ? 'required' }}">
            {% if form.vars.label is not null %}
                {{ form.vars.label }}
            {% else %}
                {{ form.vars.name | u.snake.replace('_', ' ') | title }}
            {% endif %}
        </label>
        <select id="{{ form.vars.id }}"
                class="admin-input-select"
                name="{{ form.vars.full_name }}"
                {{ form.vars.required ? 'required="required"' }}
                {{ form.vars.multiple ? 'multiple="multiple"' }}
                {% if form.vars.attr is not empty and form.vars.attr.hidden is defined %}
                    {{ form.vars.attr.hidden ? 'hidden="hidden"' }}
                {% endif %}>
            {% for choice in form.vars.choices %}
                <option value="{{ choice.value }}"
                        class="admin-option"
                        {% if choice is selectedchoice(form.vars.value) %}
                            selected="selected"
                        {% endif %}>
                    {{ choice.data.name }}
                </option>
            {% endfor %}
        </select>
    </div>
{% endblock %}

{% block entity_label %}
    <label for="{{ form.vars.id }}"
           class="admin-form-label admin-label-top {{ form.vars.required ? 'required' }}">
        {% if form.vars.label is not null %}
            {{ form.vars.label }}
        {% else %}
            {{ form.vars.name | u.snake.replace('_', ' ') | title }}
        {% endif %}
    </label>
{% endblock %}

{% block entity_widget %}
    <select id="{{ form.vars.id }}"
            class="admin-select-entity"
            name="{{ form.vars.full_name }}"
            {{ form.vars.required ? 'required="required"' }}
            {{ form.vars.multiple ? 'multiple="multiple"' }}
            {% if form.vars.attr is not empty and form.vars.attr.hidden is defined %}
                {{ form.vars.attr.hidden ? 'hidden="hidden"' }}
            {% endif %}>
        {% for choice in form.vars.choices %}
            <option value="{{ choice.value }}"
                    class="admin-option"
                    {% if choice is selectedchoice(form.vars.value) %}
                        selected="selected"
                    {% endif %}>
                {{ choice.data.name }}
            </option>
        {% endfor %}
    </select>
{% endblock %}

{# CollectionType #}
{% block collection_row %}
    <div class="admin-form-group admin-collection-field">
        <label for="{{ form.vars.id }}"
               class="admin-form-label admin-label-top {{ form.vars.required ? 'required' }}">
            {% if form.vars.label is not null %}
                {{ form.vars.label }}
            {% else %}
                {{ form.vars.name | u.snake.replace('_', ' ') | title }}
            {% endif %}
        </label>
        <div class="admin-list">
            <ul class="admin-collection-list {{ form.vars.name }}"
                data-prototype="{{ form_row(form.vars.prototype)|e('html_attr') }}"
                data-widget-counter="{{ form.children|length }}">
                {% for fields in form.children %}
                    <li class="admin-list-collection-element">
                        {% for children in fields.children %}
                            {{ form_row(children) }}
                        {% endfor %}
                    </li>
                {% endfor %}
            </ul>
            <button type="button" class="add-item-link" data-collection-holder-class=".{{ form.vars.name }}">Add an item</button>
        </div>
    </div>
{% endblock %}

