{# MoneyType #}
{% block money_row %}
    <div class="admin-form-group money-field">
        <label for="{{ form.vars.id }}" class="admin-form-label {{ form.vars.required ? 'required' }}">
            {% if form.vars.label is not null %}
                {{ form.vars.label }}
            {% else %}
                {{ form.vars.name | u.snake.replace('_', ' ') | title }}
            {% endif %}
        </label>
        <input type="text" id="{{ form.vars.id }}" name="{{ form.vars.full_name }}" {{ form.vars.required ? 'required="required"' }}
                {% if form.vars.attr is not empty and form.vars.attr.placeholder is defined %}
                    placeholder="{{ form.vars.attr.placeholder }}"
                {% endif %}
               value="{{ form.vars.value }}">
        <span class="admin-input-money">{{ form.vars.money_pattern | replace({'{{ widget }}': ''}) }}</span>
    </div>
{% endblock %}

