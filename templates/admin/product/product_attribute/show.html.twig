{% extends 'admin/admin_base.html.twig' %}

{% block title %}ProductAttribute{% endblock %}
{% block admin_context_title 'Product Attribute "' ~ product_attribute.name ~'"' %}

{% block body %}
    <section class="admin-content-container">
        <a href="{{ path(constant('App\\Controller\\RouteName::ADMIN_PRODUCT_ATTRIBUTE_INDEX')) }}" class="admin-back">back to list</a>
        <table class="admin-table show">
            <tbody>
            <tr>
                <th>Name</th>
                <td>{{ product_attribute.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ product_attribute.type }}</td>
            </tr>
            <tr>
                <th>StorageType</th>
                <td>{{ product_attribute.storageType }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ product_attribute.createdAt ? product_attribute.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ product_attribute.updatedAt ? product_attribute.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path(constant('App\\Controller\\RouteName::ADMIN_PRODUCT_ATTRIBUTE_EDIT'), {'id': product_attribute.id}) }}" class="button-top edit">Edit</a>
    </section>
{% endblock %}
