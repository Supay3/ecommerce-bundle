{% extends 'admin/admin_base.html.twig' %}

{% block title 'Products' %}

{% block body %}
    {{ include('admin/_admin_header.html.twig') }}
    <table class="admin-table">
        <thead class="admin-table-head-index">
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Stock</th>
            <th>Created at</th>
            <th>Updated at</th>
            <th></th>
        </tr>
        </thead>
        <tbody class="admin-table-body-index">
        {% for product in products %}
            <tr>
                <td>{{ product.name }}</td>
                <td>{{ product.price }} â‚¬</td>
                <td>{{ product.descriptionExcerpt }}</td>
                <td>{{ product.stock }}</td>
                <td>{{ product.createdAt ? product.createdAt|date('d/m/Y') : '' }}</td>
                <td>{{ product.updatedAt ? product.updatedAt|date('d/m/Y') : '' }}</td>
                <td class="admin-table-actions">
                    <a href="{{ path(constant('App\\Controller\\RouteName::ADMIN_PRODUCT_EDIT'), {'id': product.id}) }}">Edit</a><!--
                -->{{ include('admin/product/product/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
