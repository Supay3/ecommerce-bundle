{{ dump(form) }}
{% form_theme form 'admin/form/admin_form_theme.html.twig' %}
{{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.productOptions) }}
    {{ form_row(form.stock) }}

    {{ form_row(form.price) }}
    {{ form_row(form.description) }}

    <div class="form-group select-field">
        {{ form_label(form.productAttribute) }}
        {{ form_widget(form.productAttribute) }}
        <button type="button" class="add-attribute-link" data-collection-holder-class=".productAttributeValues">Add attribute(s)</button>
    </div>
    {% form_theme form 'admin/form/product_attribute_value_form_theme.html.twig' %}

    {{ form_row(form.productAttributeValues) }}

    <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_widget(form._token) }}
{{ form_end(form, {'render_rest': false}) }}